<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="179dp"
        android:layout_height="197dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_69953_purse_dollars_finance_money_pay_icon" />

    <EditText
        android:id="@+id/editTextMablagh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/farsi_fonts"
        android:hint="لطفا مبلغ را وارد کنید"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toTopOf="@+id/buttonMohasebe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMablagh">

        <RadioButton
            android:id="@+id/radiosod10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bnazanin"
            android:text="سود یک ماهه(10 درصد)"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radiosod12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bnazanin"
            android:text="سود سه ماهه(12 درصد)"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonMohasebe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/bnazanin"
        android:text="محاسبه سود"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>